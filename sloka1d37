    	}
    	if(kanda == 5){
    		if(sarga < 68){
    			sarga = sarga+1;
    			window.location.href = "sloka?field_kanda_tid="+kanda+"&field_sarga_value="+sarga+args;
    		}
    	}
        
    }

</script>    </div>
  
  
  
  
  
  
</div>  </div>
  
</div> <!-- /.block -->
</div>
 <!-- /.region -->
          </section> <!-- /#main -->
        </div>
      
              
        </div>

        
        
    </div>
</div>

